  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@breve.errors.count, "error") %>.
    </div>
    <ul>
    <% @breve.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>