<% content_for(:head) do %>
	<%= javascript_include_tag 'one_col_list' %>
<% end %>

<% @content.each do |item| %>
	<div class="row">
		<%= link_to item do %> 
			<div class="one-col-item span10 offset1">	
				<div class="row">
					<div class="span4">	
						<%= peb_image_tag item, :medium %>
					</div>
					<div class="span6">
						<h4><%= item.title %></h4>
						<span><%= item.location %></span>
						<p><%= truncate item.description, length: 400 %></p>
						<% time = item.updated_at %>
						<% if @search_type && @search_type == 'location' %>
							<span class="date">A <%= (Geocoder::Calculations.distance_between(@reference_point, [item.latitude, item.longitude])*1000).floor %> m√®tres</span>
						<% else %>
							<span>Updated <%= distance_of_time_in_words_to_now(time, include_seconds = false) %> ago</span>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>