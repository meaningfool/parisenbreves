<% @comment = Comment.new %>
<%= form_for [@breve, @comment], html: {multipart: true, class: "comment-form"} do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="control-group">
		<div class="controls">
			<%= f.text_area :content, placeholder: "Entrez votre commentaire..." %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= f.submit "Commenter", class: "btn btn-primary" %>
		</div>
	</div>
<% end %>