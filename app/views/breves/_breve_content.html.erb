<div class="text-content">
	<p class='description'><%= @breve.description %></p>
	<p>Source : <a class='source' href="<%= @breve.source_URL %>"><%= @breve.source_name %></a></p>
	<p>Cr√©dit photo : <a class='source' href="<%= @breve.photo_credit_URL %>"><%= @breve.photo_credit_name %></a></p>
	<span class='latitude' id='breve_latitude'><%= @breve.latitude %></span>
	<span class='longitude' id='breve_longitude'><%= @breve.longitude %></span>
	<div class="action">
		<% if @tab_mode != 'version' %>
			<% if can? :update, @breve %>
				<%= link_to 'Editer', edit_breve_path(@breve), :class => "btn btn-large edit-btn" %>
			<% end %>
			<% if can? :destroy, @breve %>
				<%= link_to 'Supprimer', @breve, method: :delete, data: { :confirm => "Are you sure ?"} %>
			<% end %>
		<% end %>
	</div>
</div>		
<div id="map_canvas"></div>
