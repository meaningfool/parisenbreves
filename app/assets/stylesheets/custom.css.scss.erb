@import "bootstrap_and_overrides";

/* header */

#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  line-height: 1;
}

#logo:hover {
  color: #fff;
  text-decoration: none;
}

/* footer */

footer {
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: #999;

  h4{ text-align: center; }
  .social_media {
    text-align: center;
    img { margin: 0 10px;}
  }
}

/* Home page */

.content_link {
  text-align: center;
  font-size: 20px;
}

.carousel-breve {
  position: absolute;
  top: 20px;
  right: 60px;
  bottom: 100px;
  padding: 15px;
  width: 30%;
  background: #333333;
  background: rgba(0, 0, 0, 0.75);

  h3, span, p {
    color: #fff;
  }
}

.carousel-principes {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 15px;
  background: #333333;
  background: rgba(0, 0, 0, 0.75);

    div {
      float: left;
      width: 33%;
      text-align: center;
      font-size: 22px;
    }
    span {
    color: #fff;
  }
}


/* item list */

.list {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-top: 1px solid $grayLighter;
    &:last-child {
      border-bottom: 1px solid $grayLighter;
    }
  }

  a {
    display: block;
  }

  img {
    float: left;
    width: 150px;
    height: 100px;
    margin-right: 20px;
  }
}

/* Sidebar list */

.sidebar-list {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-top: 1px solid $grayLighter;
    &:last-child {
      border-bottom: 1px solid $grayLighter;
    }
  }

  a {
    display: block;
  }

  img {
    float: left;
    width: 100px;
    height: 80px;
    margin-right: 20px;
  }
}


/* BrÃ¨ve */

.breve-content {
  img {
    margin: 20px 0;
  }

  .text-content {
    width: 50%;
    float: left;
  }
  #map_canvas {
    width: 40%;
    height: 300px;
    float: right;
  }
  .latitude, .longitude {
    visibility: hidden;
  }
  .edit-btn {
    margin-right: 40px;
    margin-bottom: 20px;
  }
  .action {
    clear: both;
  }

}

.history > li > a:hover {
  border-color: #ffffff #ffffff #dddddd;
}

.alert .back_link {
  float: right;
  a {
  text-decoration: underline;
  color: #b94a48; 
  }
}

.version-action {
  float: right;
  a {
    margin: 0 10px;
  }
}

/* Breve form */
  .breve-form {
    .input-append {
      margin-bottom: 20px;
    }
    #map_canvas {
      width: 100%;
      height: 300px;
    }

  }
  

@mixin box_sizing {
  -moz-box-sizing: border-box; 
  -webkit-box-sizing: border-box; 
  box-sizing: border-box;
}

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
  label {
  	color: #B94148;
  }
 }

 /* forms */

input, textarea, select, .uneditable-input {
  border: 1px solid #bbb;
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  @include box_sizing;
}

input {
  height: auto !important;
}

/* users index */

.users {
  list-style: none;
  margin: 0;
  li {
    overflow: auto;
    padding: 10px 0;
    border-top: 1px solid $grayLighter;
    &:last-child {
      border-bottom: 1px solid $grayLighter;
    }
  }
}